@model ProyectoFinal.Areas.Admin.Models.ViewModels.IndexCategoriasViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutAdmin";
}

<div class="admin-card">
    <h2 class="admin-title">Administrar Categorías</h2>

    <div class="message message-success">
        Bienvenido al panel de administración de categorías
    </div>

    <div class="btn-group">
        <a href="~/Admin/Categorias/Agregar" class="btn btn-primary">Agregar Nueva Categoría</a>
    </div>

    <table class="products-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model.CategoriasIndex)
            {
                <tr>
                    <td>@cat.Id</td>
                    <td>@cat.Nombre</td>
                    <td class="actions-cell">
                        <a href="~/Admin/Categorias/Editar/@cat.Id" class="action-btn btn-secondary">Editar</a>
                        <a href="~/Admin/Categorias/Eliminar/@cat.Id" class="action-btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
