@{
    Layout = "LayoutAdmin";
}

<div class="admin-card">
    <h2 class="admin-title">Administrar Categorías</h2>

    <div class="message message-success">
        Bienvenido al panel de administración de categorías
    </div>

    <div class="btn-group">
        <a href="agregar.html" class="btn btn-primary">Agregar Nueva Categoría</a>
    </div>

    <table class="products-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Pasteles</td>
                <td>Deliciosos pasteles de diferentes sabores</td>
                <td>Activa</td>
                <td class="actions-cell">
                    <a href="editar.html" class="action-btn btn-secondary">Editar</a>
                    <a href="eliminar.html" class="action-btn btn-danger">Eliminar</a>
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>Galletas</td>
                <td>Galletas artesanales y decoradas</td>
                <td>Activa</td>
                <td class="actions-cell">
                    <a href="editar.html" class="action-btn btn-secondary">Editar</a>
                    <a href="eliminar.html" class="action-btn btn-danger">Eliminar</a>
                </td>
            </tr>
            <tr>
                <td>3</td>
                <td>Pays</td>
                <td>Pays de frutas y crema</td>
                <td>Activa</td>
                <td class="actions-cell">
                    <a href="editar.html" class="action-btn btn-secondary">Editar</a>
                    <a href="eliminar.html" class="action-btn btn-danger">Eliminar</a>
                </td>
            </tr>
            <tr>
                <td>4</td>
                <td>Panes</td>
                <td>Panadería tradicional y especial</td>
                <td>Inactiva</td>
                <td class="actions-cell">
                    <a href="editar.html" class="action-btn btn-secondary">Editar</a>
                    <a href="eliminar.html" class="action-btn btn-danger">Eliminar</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
