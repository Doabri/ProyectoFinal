@model ProyectoFinal.Areas.Admin.Models.ViewModels.EliminarViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutAdmin";
}

<div class="admin-card">
    <h2 class="admin-title">Eliminar Producto</h2>

    <div class="message message-error">
        <h3 style="color: var(--color-peligro); margin-bottom: 1rem;">¿Estás seguro de eliminar este producto?</h3>
        <p style="font-size: 1.2rem; margin-bottom: 1rem;"><strong>@Model.Nombre</strong></p>
        <p style="color: var(--color-texto); margin-bottom: 2rem;">Categoría: @Model.Categoria</p>
        <p>Esta acción no se puede deshacer.</p>
    </div>

    <div class="btn-group">
        <form method="post" asp-action="Eliminar" asp-controller="Home">
            <button class="btn btn-danger">Confirmar Eliminación</button>
            <a href="~/Admin/Home/Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>