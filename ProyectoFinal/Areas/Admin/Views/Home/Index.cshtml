@model ProyectoFinal.Areas.Admin.Models.ViewModels.IndexViewModel
@{
    Layout = "LayoutAdmin";
}

<div class="admin-card">
    <h2 class="admin-title">Panel de Administración</h2>

    <div class="message message-success">
        Bienvenido al panel de administración de Pastelería Dulce
    </div>

    <div class="btn-group">
        <a href="~/Admin/Home/Agregar" class="btn btn-primary">Agregar Nuevo Producto</a>
    </div>

    <table class="products-table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pastel in Model.Pasteles)
            {
                <tr>
                    <td>@pastel.Nombre</td>
                    <td>@pastel.Categoria</td>
                    <td>@pastel.Precio</td>
                    <td class="actions-cell">
                        <a href="~/Admin/Home/Editar/@pastel.Id" class="action-btn btn-secondary">Editar</a>
                        <a href="~/Admin/Home/Eliminar/@pastel.Id" class="action-btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>