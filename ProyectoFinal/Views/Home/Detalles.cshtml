@model ProyectoFinal.Models.ViewModels.UsuarioViewModel.DetallesPastelUsuarioViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "Layout";
}

<a href="~/Home/Index" class="btn" style="margin-bottom: 20px;">← Volver al catálogo</a>

<form asp-action="AgregarCarrito" asp-controller="Home" method="post">

    <input type="hidden" name="pastelId" value="@Model.Id" />

    <div class="detalle-producto">
        <div class="imagen-producto">
            <img src="~/images/pastel/@(Model.Id).jpg" alt="@Model.Nombre">
        </div>

        <div class="info-producto">
            <h1>@Model.Nombre</h1>
            <p class="precio">$@(Model.PrecioBase)</p>
            <p class="descripcion-detalle">
                @Model.Descripcion
            </p>

            <div class="ingredientes">
                <h3>Ingredientes:</h3>
                <ul>
                    @foreach (var ing in Model.Ingredientes)
                    {
                        <li>@ing</li>
                    }
                </ul>
            </div>

            <div class="tamaño">
                <h3>Tamaño:</h3>

                <select asp-for="TamanoSeleccionadoId"
                        asp-items="@(new SelectList(Model.ListaTamaños, "Id", "Texto"))"
                        class="form-control">
                </select>


            </div>

            <div class="acciones">
                <button type="submit" class="btn btn-primary" style="font-size: 18px; padding: 15px 30px;">
                    🛒 Agregar al carrito
                </button>
            </div>
        </div>
    </div>
</form>
