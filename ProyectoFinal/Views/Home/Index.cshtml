@model ProyectoFinal.Models.ViewModels.UsuarioViewModel.IndexUsuarioViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "Layout";
}

<div class="hero-titulo">
    <h1>Pastelería Dulce</h1>
</div>

<div class="filtros">
    <h3>Filtrar por categoría:</h3>

    <a asp-controller="Home"
       asp-action="Index"
       asp-route-id="0"
       class="categoria-btn @(Model.CategoriaSeleccionada == 0 ? "active" : "")">
        Todos
    </a>

    <div class="categorias">
        @foreach (var categoria in Model.ListaCategorias)
        {
            <a asp-controller="Home"
               asp-action="Index"
               asp-route-id="@categoria.Id"
               class="categoria-btn @(Model.CategoriaSeleccionada == categoria.Id ? "active" : "")">
                @categoria.Nombre
            </a>
        }

    </div>
</div>

<div class="catalogo">
    <div class="productos">
        @foreach (var pastel in Model.ListaPasteles)
        {
            <div class="producto">
                <img src="~/images/pastel/@(pastel.Id).jpg" alt="@pastel.Nombre">
                <h3>@pastel.Nombre</h3>
                <p class="descripcion">@pastel.Descripcion</p>
                <p class="precio">$@(pastel.Precio)</p>
                <a href="~/Home/Detalles/@(pastel.Id)" class="btn">Ver detalles</a>
            </div>
        }

    </div>
</div>