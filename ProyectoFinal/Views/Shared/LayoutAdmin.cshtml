@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/admin.css?v=1" rel="stylesheet" />
    <title> Pastelería Dulce Admin</title>
</head>
<body>
    <header class="admin-header">
        <nav class="admin-nav">
            <h1 class="admin-logo">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">Pastelería Dulce Admin</a>
            </h1>
            <ul class="admin-menu">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">Sitio Principal</a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Categorias" asp-action="Index">
                        Administrar Categoria
                    </a>
                </li>
                <li>
                    <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="boton-logout">
                            Cerrar Sesión
                        </button>
                    </form>
                </li>

            </ul>
        </nav>
    </header>
    <main class="admin-main">
        @RenderBody()
    </main>
</body>
</html>

